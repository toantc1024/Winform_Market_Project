<Window x:Class="Winform_Market_Project.Views.AuthView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:uc="clr-namespace:Winform_Market_Project.Views.UserControls"
        xmlns:page="clr-namespace:Winform_Market_Project.Views.Pages"
        xmlns:local="clr-namespace:Winform_Market_Project.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Login"
        FontFamily="{DynamicResource MaterialDesignFont}"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        FontSize="18"
        Height="645"
        Width="875">
    <Grid Margin="28">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="1.22*" />
        </Grid.ColumnDefinitions>

        <Border Background="#FFFF7500"
                CornerRadius="10 0 0 10"
                ClipToBounds="True">
            <Border.Clip>
                <RectangleGeometry Rect="0,0,400,605"
                                   RadiusX="10"
                                   RadiusY="10" />


            </Border.Clip>

            <StackPanel Margin="0 0 0 0 " VerticalAlignment="Center">
                <TextBlock  Text="Bee shop"
                            Foreground="White"
                            TextAlignment="Center"
                            FontSize="46"
                            FontWeight="Bold" />

                <TextBlock Text="Online Exchange Portal"
                           Foreground="White"
                           TextAlignment="Center"
                           FontSize="16"
                           FontWeight="Light"
                           Margin="0 15 0 3" />
            </StackPanel>

        </Border>

        
        
        <Border Grid.Column="1"
                Background="White"
                CornerRadius="0 10 10 0"
                ClipToBounds="True">
            <Grid>

                <Button Background="Orange"
                        Foreground="White"
                        BorderBrush="Orange"
                        Margin="5"
                        Click="CloseWindow"
                        Panel.ZIndex="999"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Right"
                         materialDesign:ShadowAssist.ShadowDepth="Depth0"
                        IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                        Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                        ToolTip="MaterialDesignFloatingActionMiniLightButton">
                    <materialDesign:PackIcon Width="40"
                                             Height="40"
                                             Kind="Close" />
                </Button>

                <!--Close icon-->
                <Frame x:Name="AuthFrame">

                </Frame>
            </Grid>

        </Border>
    </Grid>
</Window>
